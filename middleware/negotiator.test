const
  { test, serve, read, fetch }
    = require ('test')


test ('Resource HTML GET / Accept: text/html', async t => {

  const
    accept  = 'text/html'
  , URI     = `http://localhost:8181/`
  , server  = serve `server/fixtures`
  , dist    = read  `server/fixtures/index.html`
  , options = {
      compress : false
    , headers  : { accept, 'Accept-Encoding' : 'identity' } }
  , { body, headers } = await fetch (URI, options)
  , type = headers.get ('content-type')

  t.notOk (headers.get ('content-encoding'))
//t.ok (type.match (/application\/javascript/))
//t.ok (type.match (/charset=utf-8/))
  t.equal (body, dist)

  server.close ``
  t.end ()
})
