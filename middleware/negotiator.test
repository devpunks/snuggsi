const
  { test, serve, read, fetch }
    = require ('test')

, { Server }
    = require ('..')


test ('calling next middlewaree')


test.only ('GET / defaults to dist/snuggsi.min.js', async t => {

  const
    server = serve ``
  , dist   = read `dist/snuggsi.min.js`

  , response
      = await fetch ('http://localhost:8181/')

  , type
      = response.headers.get ('content-type')

  , body
      = await response.text ()


  console.warn (type)

  t.equal (body, dist)

  server.close ``
  t.end ()
})
