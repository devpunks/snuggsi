const
  { test, fetch, read }
    = require ('test')

, { route }
    = require ('.')

, { Server }
    = require ('..')


test.only ('route URI to middleware', async t => {

  const
    body
      = 'Shazam'

  , middleware
      = (context) =>
          (context.body = body)

  , stack
      = [ route ('/foo/', middleware) ]

  , server
      = (new Server (stack))
      .serve ``

  , response
      = await fetch ('http://localhost:8181/foo/')

  , status = response.status


  t.equal
    (body, await read (response.body))

  server.close ``
  t.end ()
})
