const
  path = '/foo/'
, body = 'Shazam'
, URI  = `http://localhost:8181${path}`

, { test, fetch }
    = require ('test')

, { Server, Resource }
    = require ('..')

, { route }
    = require ('../middleware')

, middleware = context =>
    (context.body = body)


test ('route URI', async t => {

  const
    stack =
      [ route (`${path}`, middleware) ]

 ,  server =
      (new Server (stack)).serve ``

  , response = await fetch (`${URI}14`)


  t.equal (200, response.status)
  t.equal (body, await response.text ())

  server.close ``
  t.end ()
})


test ('route URI {token} parameters', async t => {

  const
    timestamp = (new Date).getTime `` + '' // convert to string

  , echo = context =>
      t.equal (timestamp, context.params.timestamp)

  , stack =
      [ route (`${path}{timestamp}`, echo) ]

 ,  server =
      (new Server (stack)).serve ``

  , response = await fetch (`${URI}${timestamp}`)

  server.close ``
  t.end ()
})


test ('decoding route URI encoded {token} parameters', async t => {

  const
    value   = 'ツname+ståle'
  , encoded = encodeURIComponent (value)
  , decoded = decodeURIComponent (encoded)

  , echo = context =>
      t.equal (decoded, context.params.decoded)

  , stack =
      [ route (`${path}{decoded}`, echo) ]

 ,  server =
      (new Server (stack)).serve ``

  , response = await fetch (`${URI}${encoded}`)

  server.close ``
  t.end ()
})


test ('URI without route', async t => {

  const
    stack =
      [ route (path, middleware) ]

 ,  server =
      (new Server (stack)).serve ``

  , response = await fetch (`${URI}adsfadsf`)


  t.equal (404, response.status)

  server.close ``
  t.end ()
})
