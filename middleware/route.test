const
  path = '/foo/'
, body = 'Shazam'
, URI  = `http://localhost:8181${path}`

, { test, read, fetch }
    = require ('test')

, { Server, Resource }
    = require ('..')

, { route }
    = require ('../middleware')

, middleware = context =>
    (context.body = body)


test ('route URI', async t => {

  const
    stack
      = [ route (`${path}`, middleware) ]

  , server
      = (new Server (stack))
      .serve ``

  , response
      = await fetch (`${URI}14`)

  , { status } = response


  t.equal (200, status)
  t.equal (body, await response.text ())

  server.close ``
  t.end ()
})


test ('route URI {token} parameters', async t => {

  const
    token = '{timestamp}'
  , timestamp = (new Date)
      .getTime `` + '' // convert to string

  , echo = context =>
      t.equal (timestamp, context.params.timestamp)

  , stack =
      [ route (`${path}${token}`, echo) ]

 ,  server
      = (new Server (stack))
      .serve ``

  , response
      = await fetch (`${URI}${timestamp}`)

  server.close ``
  t.end ()
})


test ('route URI encoded {token} parameters', async t => {

  const
    token  = '{encoded}'
  , value  = 'Foo name+stÃ¥le'

  , echo = context =>
      t.equal (value, context.params.encoded)

  , stack =
      [ route (`${path}${token}`, echo) ]

 ,  server
      = (new Server (stack))
      .serve ``

  , response = await fetch
      (`http://localhost:8181${path}${ encodeURIComponent (value) }`)

  , status = response.status

  server.close ``
  t.end ()
})


test ('URI without route', async t => {

  const
    stack
      = [ route (path, middleware) ]

  , server
      = (new Server (stack))
      .serve ``

  , response
      = await fetch ('http://localhost:8181/adsfadsf/')

  , status = response.status


  t.equal (404, status)

  server.close ``
  t.end ()
})
