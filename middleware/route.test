const
  { test, fetch, read }
    = require ('test')

, { route }
    = require ('.')

, { Server }
    = require ('..')

, body
    = 'Shazam'

, middleware
    = (context) =>
        (context.body = body)

, stack
    = [ route ('/foo/', middleware) ]


test ('route URI to middleware', async t => {

  const
    server
      = (new Server (stack))
      .serve ``

  , response
      = await fetch ('http://localhost:8181/foo/')

  , status = response.status


  t.equal (200, status)

  t.equal (body, await read (response.body))

  server.close ``
  t.end ()
})


test ('URI without route', async t => {

  const
    server
      = (new Server (stack))
      .serve ``

  , response
      = await fetch ('http://localhost:8181/adsfadsf/')

  , status = response.status


  t.equal (404, status)

  server.close ``
  t.end ()
})
