test `HEAD Resource response`

(async assert => {

  const
    resource = Resource ``

  , server =
      (new Server ( [ route (resource) ] ))
      .serve ``

  , ALLOWED_METHODS = DEFAULT_METHODS


  let { status, headers }
    = await fetch ( URL + 'index.html', { method: 'HEAD' } )

  assert ( status == 200 )
  assert.notOk ( headers.get ('allow') )

  server.close ``
})


