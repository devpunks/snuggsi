#!/usr/bin/env bash

declare -r \
  MAXIMUM=1500 \
  DIRECTORY=dist

declare -r LIBRARY="${DIRECTORY}/snuggsi.min.es.br"
declare -r OCTETS=$(
  ls -nl $LIBRARY | awk '{print $5}'
) # OCTETS

echo
echo "ğŸš snuggsiãƒ„ Weight Check"
echo "  âš ï¸  Maximum allowable weight ğŸ‘‰  $MAXIMUM OCTETS"

echo "  ğŸ‘‡"
echo "  ğŸ“ƒ  $LIBRARY"

[[ $OCTETS -lt $MAXIMUM ]] \
  && echo "    âœ…  Weight ğŸ‘‰  $OCTETS OCTETS" \
  && echo && exit

echo "    ğŸ”´  Weight ğŸ‘‰  $OCTETS OCTETS"
echo "      âŒ  Overweight by $((OCTETS - MAXIMUM)) OCTETS"
echo && exit 1

