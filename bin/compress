#!/usr/bin/env bash


DIST=./dist

echo
echo "ðŸ’ª  Compressing Libraries"
echo "  ðŸ‘‡"


echo "  ðŸ’¾  Brotli compress"

FILE="$DIST/snuggsi.min.es"
echo "    ðŸ’¾  $FILE ðŸ‘‰  $FILE.br"

# bro is installed locally and manually. No npm cli. HELP!
bro \
  --repeat 1 \
  --quality 11 \
  --input ./dist/*.min.es \
> ./dist/snuggsi.min.es.br


bro \
  --repeat 1 \
  --quality 11 \
  --input ./dist/*.min.js \
> ./dist/snuggsi.min.js.br


# gzip

./node_modules/.bin/zopfli \
  -i 50 \
  --gzip \
  --ext gz \
  --verbose \
  dist/snuggsi.min.es

./node_modules/.bin/zopfli \
  -i 50 \
  --gzip \
  --ext gz \
  --verbose \
  dist/snuggsi.min.js


# deflate (zlib)

./node_modules/.bin/zopfli \
  -i 50 \
  --zlib \
  --ext zo \
  --verbose \
  dist/snuggsi.min.es

./node_modules/.bin/zopfli \
  -i 50 \
  --zlib \
  --ext zo \
  --verbose \
  dist/snuggsi.min.js
