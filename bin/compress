#!/usr/bin/env bash

declare -r \
  DIST=./dist \
  ZOPFLI='zopfli -v -i10' \
  BROTLI='brotli --verbose --best'
# bro is installed locally and manually. No npm cli. HELP!

declare -ar \
  FILES=( snuggsi.min.es snuggsi.min.js )

echo -e "  ðŸƒ  Compressing â€¦"

for file in ${FILES[@]} ; do
  declare path=${DIST}/${file}

  echo -e "   ðŸŒ¿  $path"

  echo -e "     â˜˜ï¸  GZIP ðŸ‘‰  ${path}.gz"
  $ZOPFLI --gzip $path

  echo "     ðŸ€  ZLIB ðŸ‘‰  ${path}.zlib"
  $ZOPFLI --zlib $path

  echo "     ðŸ‚  DEFLATE ðŸ‘‰  $path.deflate"
  $ZOPFLI --deflate $path

  echo "     ðŸŒ±  Brotli ðŸ‘‰  ${path}.br"
  $BROTLI --stdout \
    $path > $path.br

  echo
done

