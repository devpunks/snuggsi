#!/usr/bin/env bash

# bro is installed locally and manually. No npm cli. HELP!


DIST=./dist
BROTLI=bro
ZOPFLI=./node_modules/.bin/zopfli


echo "  🌱  Compressing …"


FILE=$DIST/snuggsi.min.es

echo "    🍃  $FILE"
echo "       🌱  Brotli 👉  $FILE.br"

$BROTLI         \
  --repeat 1    \
  --quality 11  \
  --input $FILE \
> $FILE.br


echo "       🍀  GZIP 👉  $FILE.gz"

$ZOPFLI     \
  -i 50     \
  --gzip    \
  --ext gz  \
  --verbose \
$FILE


echo "       🍂  DEFLATE 👉  $FILE.zo"

$ZOPFLI     \
  -i 50     \
  --gzip    \
  --ext zo  \
  --verbose \
$FILE


FILE=$DIST/snuggsi.min.js

echo "    🍃  $FILE"
echo "       🌱  Brotli 👉  $FILE.br"


$BROTLI         \
  --repeat 1    \
  --quality 11  \
  --input $FILE \
> $FILE.br


echo "       🍀  GZIP 👉  $FILE.gz"

$ZOPFLI     \
  -i 50     \
  --gzip    \
  --ext gz  \
  --verbose \
$FILE


echo "       🍂  DEFLATE 👉  $FILE.zo"

$ZOPFLI     \
  -i 50     \
  --gzip    \
  --ext zo  \
  --verbose \
$FILE

echo
