#!/usr/bin/env bash

# bro is installed locally and manually. No npm cli. HELP!
declare -r \
  BROTLI=brotli \
  ZOPFLI=zopfli \
  DIST=./dist \
  FILES=(snuggsi.min.es snuggsi.min.js)

echo "  ğŸƒ  Compressing â€¦"

for file in ${FILES[@]} ; do
  declare path=${DIST}/${file}

  echo "    ğŸŒ¿  $path"

  echo -e "\n       ğŸŒ±  Brotli ğŸ‘‰  ${path}.br"
  $BROTLI \
    --stdout \
    --quality=11 \
    $path \
  > $path.br

  echo -e "\n        â˜˜ï¸  GZIP ğŸ‘‰  ${path}.gz"
  $ZOPFLI -v \
    --gzip \
    --i50 \
  $path

  echo -e "\n        ğŸ€  ZLIB ğŸ‘‰  ${path}.zlib"
  $ZOPFLI -v \
    --zlib \
    --i50 \
    $path

  echo -e "\n        ğŸ‚  DEFLATE ğŸ‘‰  $path.deflate"
  $ZOPFLI -v \
    --deflate \
    --i50 \
  $path

done

echo

