#!/usr/bin/env bash

# bro is installed locally and manually. No npm cli. HELP!


DIST=./dist
BROTLI=brotli
ZOPFLI=zopfli


echo "  🌱  Compressing …"


FILE=$DIST/snuggsi.min.es

echo "    🍃  $FILE"
echo "       🌱  Brotli 👉  $FILE.br"

$BROTLI         \
  --stdout \
  --quality=11  \
  $FILE \
> $FILE.br

echo "       🍀  GZIP 👉  $FILE.gz"

$ZOPFLI -v \
  --gzip \
  --i50 \
$FILE


echo "       🍂  DEFLATE 👉  $FILE.zo"

$ZOPFLI -v \
  --deflate \
  --i50 \
$FILE


FILE=$DIST/snuggsi.min.js

echo "    🍃  $FILE"
echo "       🌱  Brotli 👉  $FILE.br"


$BROTLI         \
  --repeat 1    \
  --quality 11  \
  --input $FILE \
> $FILE.br


echo "       🍀  GZIP 👉  $FILE.gz"

$ZOPFLI     \
  -i 50     \
  --gzip    \
  --ext gz  \
  --verbose \
$FILE


echo "       🍂  DEFLATE 👉  $FILE.zo"

$ZOPFLI     \
  -i 50     \
  --gzip    \
  --ext zo  \
  --verbose \
$FILE

echo
