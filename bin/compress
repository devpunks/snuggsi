#!/usr/bin/env bash

# bro is installed locally and manually. No npm cli. HELP!
declare -r \
  BROTLI=brotli \
  ZOPFLI=zopfli \
  DIST=./dist \
  FILES=(snuggsi.min.es snuggsi.min.js)

echo -e"\n  🍃  Compressing …"

for file in ${FILES[@]} ; do
  declare path=${DIST}/${file}

  echo -e "\n    🌿  $path"

  echo -e "\n        ☘️  GZIP 👉  ${path}.gz"
  $ZOPFLI -v \
    --gzip \
    --i50 \
  $path

  echo -e "\n        🍀  ZLIB 👉  ${path}.zlib"
  $ZOPFLI -v \
    --zlib \
    --i50 \
    $path

  echo -e "\n        🍂  DEFLATE 👉  $path.deflate"
  $ZOPFLI -v \
    --deflate \
    --i50 \
  $path

  echo -e "\n       🌱  Brotli 👉  ${path}.br"
  $BROTLI \
    --best \
    --stdout \
    --verbose \
    $path \
  > $path.br

echo

done

