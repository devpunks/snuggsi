#!/usr/bin/env bash

declare -r \
  DIST=./dist \
  ZOPFLI='zopfli -v -i10' \
  BROTLI='brotli --verbose --best'
# bro is installed locally and manually. No npm cli. HELP!

declare -ar \
  FILES=( snuggsi.min.es snuggsi.min.js )

echo -e "  🍃  Compressing …"

for file in ${FILES[@]} ; do
  declare path=${DIST}/${file}

  echo -e "   🌿  $path"

  echo -e "     ☘️  GZIP 👉  ${path}.gz"
  $ZOPFLI --gzip $path

  echo "     🍀  ZLIB 👉  ${path}.zlib"
  $ZOPFLI --zlib $path

  echo "     🍂  DEFLATE 👉  $path.deflate"
  $ZOPFLI --deflate $path

  echo "     🌱  Brotli 👉  ${path}.br"
  $BROTLI --stdout \
    $path > $path.br

  echo
done

