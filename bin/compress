# bro is installed locally and manually. No npm cli. HELP!
#!/usr/bin/env bash


DIST=./dist

echo
echo "ðŸ’ª  Compressing Libraries"
echo "  ðŸ‘‡"


FILE="$DIST/snuggsi.min.es"

echo "  ðŸ’¾  $FILE"
echo "    ðŸ“ƒ  Brotli ðŸ‘‰  $FILE.br"

bro \
  --repeat 1 \
  --quality 11 \
  --input $FILE \
> "$FILE.br"


echo "    ðŸ“ƒ  GZIP   ðŸ‘‰  $FILE.gz"

./node_modules/.bin/zopfli \
  -i 50 \
  --gzip \
  --ext gz \
  --verbose \
  dist/snuggsi.min.es

./node_modules/.bin/zopfli \
  -i 50 \
  --gzip \
  --ext gz \
  --verbose \
  dist/snuggsi.min.js


# deflate (zlib)

./node_modules/.bin/zopfli \
  -i 50 \
  --zlib \
  --ext zo \
  --verbose \
  dist/snuggsi.min.es

./node_modules/.bin/zopfli \
  -i 50 \
  --zlib \
  --ext zo \
  --verbose \
  dist/snuggsi.min.js
