#!/usr/bin/env bash

echo
echo "  „ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ "
echo "  „ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ                  „ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ "
echo "  „ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ     snuggsi „ÉÑ   „ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ "
echo "  „ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ                  „ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ "
echo "  „ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ„ÉÑ "

export ENTRY=`dirname $(readlink $BASH_SOURCE)`
export BIN=$(cd `dirname $BASH_SOURCE`/$ENTRY; pwd)
export SNUGGSI=$(dirname $BIN)
export COMMAND="$BIN/$1"
export RESOURCES=("${@:2}")


function execute {
  echo
  echo "üìö  RESOURCES"
  echo
  printf ' üëâ  üìÅ  %s\n' "${RESOURCES[@]}"
  echo


  for RESOURCE in ${RESOURCES[@]}
    do
      if [[ -d $RESOURCE ]]; then
        echo " ‚û° üìÅ  $RESOURCE"
        $COMMAND $RESOURCE
      else
        echo "üî¥  $RESOURCE NOT A DIRECTORY"
      fi
    done
}


if test -f $COMMAND && \
   test snuggsi != "$1"
  then
    execute
  else
    echo "üî¥  Invalid command"
fi

echo
