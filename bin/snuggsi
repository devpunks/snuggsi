#!/usr/bin/env bash

# Environment variable vs. Shell Variable
#  - https://askubuntu.com/questions/26318/environment-variable-vs-shell-variable-whats-the-difference

# Shell Parameter Expansion
#  - https://www.gnu.org/software/bash/manual/html_node/Shell-Parameter-Expansion.html

# Bash string manipulations
#  - http://www.tldp.org/LDP/LG/issue18/bash.html
#  - https://stackoverflow.com/questions/6393551/what-is-the-meaning-of-0-in-a-bash-script

echo "
  ツツツツツツツツツツツツツツツツツツツ
  ツツツツツ                  ツツツツツ
  ツツツツツ    snuggsi ツ    ツツツツツ
  ツツツツツ                  ツツツツツ
  ツツツツツツツツツツツツツツツツツツツ
"

function node_path { # npm bin -g
  local \
    node=`npm config get prefix | awk NR==1` \
    modules=lib/node_modules

  echo ${NODE_PATH:-$node/$modules}
}


function check {
  local \
    resource=$1

    test ! -d $resource \
      && echo -e "  🔴  $resource RESOURCE NOT FOUND !\n\n" \
      && return 1

    return 0
}


function executable {
  local \
    execute=$1

  test ! -f $execute \
    || test ${execute##*/} == snuggsi \
    && echo -e "\n  🚫  NON EXECUTABLE COMMAND !\n\n" \
    && exit 1 # Short circuit execution

  echo $execute
}


function run {
  source $SNUGGSI/bin/.arguments

  local \
    command=$1

  for resource in "${ARGUMENTS[@]:-`pwd` }" # Default to current directory
    do
      (executable $command)  \
        && (check $resource) \
        && echo -e " 👉  📂  $resource ════════════════════════════════════════════\n\n" \
        && $command $resource
    done
}


declare -rx \
  NODE_PATH=`node_path` \
  SNUGGSI=`node_path`/${BASH_SOURCE##*/} # TODO: benchmark as node_path is rather slow due to npm


run $SNUGGSI/bin/${@:-help}
