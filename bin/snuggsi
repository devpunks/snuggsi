function check {
  local \
    resource=$1

    test ! -d $resource \
      && echo -e "  üî¥  $resource RESOURCE NOT FOUND !\n\n" \
      && return 1

    return 0
}

function run {
  source $1/bin/.resources

  local \
    snuggsi=$1
    command=${snuggsi}/bin/${2:-help}

  echo Local command ${command}
  echo Resources ${RESOURCES[@]}

  ${command}

  return

  for resource in "${ARGUMENTS[@]:-`pwd` }" # Default to current directory
    do
      (check $resource) \
        && echo -e " üëâ  üìÇ  $resource ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê\n\n" \
        && $command $resource
    done
}

function snuggsi {
  echo ${NODE_PATH}/${BASH_SOURCE##*/}
}


function command {
  echo 

# test ! -f $execute \
#   || test ${execute##*/} == snuggsi \
#   && echo -e "\n  üö´  NON EXECUTABLE COMMAND !\n\n" \
#   && exit 1 # Short circuit execution

# echo $execute
}

declare -rx         \
  SNUGGSI=`snuggsi` \
  COMMAND=$1

run $SNUGGSI $COMMAND
