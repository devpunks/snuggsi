#!/usr/bin/env bash

# Arrays - https://linuxconfig.org/how-to-use-arrays-in-bash-script
# ARGUMENT PARSING - https://stackoverflow.com/q/192249/how-do-i-parse-command-line-arguments-in-bash

echo Resources

function normalize {
  local -a \
    resources=()

  for argument in $@
    do
      echo "${argument}"
    done
}

declare -a  \
  ARGUMENTS=( "`normalize ${@:2}`" )

declare -ax \
  RESOURCES=( ${ARGUMENTS[@]:-`pwd`} ) # Default to current directory

echo ARGUMENTS $ARGUMENTS
echo RESOURCES $RESOURCES

