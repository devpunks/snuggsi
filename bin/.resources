# ARGUMENT PARSING - https://stackoverflow.com/q/192249/how-do-i-parse-command-line-arguments-in-bash
function locate {
  local -r resources=${@:-`pwd`}

  for resource in ${resources[@]} ; do
    echo $( realpath "${resource}" )
  done
} # locate

declare -a  \
