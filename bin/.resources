#!/usr/bin/env bash

# ARGUMENT PARSING - https://stackoverflow.com/q/192249
# Arrays - https://linuxconfig.org/how-to-use-arrays-in-bash-script
function locate {
  local -r locations=${@:-`pwd`}

  for location in ${locations[@]} ; do
    echo $( realpath "${location}" )
  done
} # locate

declare -a  \
  RESOURCES=( $( locate ${@:2} ) )

