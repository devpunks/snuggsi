#!/bin/bash

MAXIMUM=1500
LIBRARY=./dist/snuggsi.min.es.br


echo
echo "⚖ Validating Weight of 👉  $LIBRARY"
echo "  ⚠️  Maximum allowable weight 👉  $MAXIMUM OCTETS"
echo


# this ensures we aren't using any aliases
alias ls=ls

OCTETS=$(
  ls -nl $LIBRARY | \
  awk '{print $5}'
) || exit 1

if [[ $OCTETS -gt $MAXIMUM ]]; then
  echo "  ❌  snuggsiツ current weight is $OCTETS OCTETS"
  echo && exit 1
fi


echo "  ✅  snuggsiツ weighs 👉  $OCTETS OCTETS"
echo
