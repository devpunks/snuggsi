#!/bin/bash

MAXIMUM=1500
LIBRARY=./dist/snuggsi.min.es.br


echo
echo "‚öñ Validating Weight of üëâ  $LIBRARY"
echo


# this ensures we aren't using any aliases
alias ls=ls

OCTETS=$(
  ls -nl $LIBRARY | \
  awk '{print $5}'
) || exit 1

if [[ $OCTETS -gt $MAXIMUM ]]; then
  echo "  ‚ö†Ô∏è ‚ö†Ô∏è ‚ö†Ô∏è  current weight is $OCTETS, maximum allowable is $MAXIMUM OCTETS"
  exit 1
fi


echo "  ‚úÖ  snuggsi„ÉÑ weighs üëâ  $OCTETS OCTETS"
echo
