#!/bin/bash

LIBRARY=./dist/snuggsi.min.es.br


echo
echo "‚öñ Validating Weight of üëâ  $LIBRARY"
echo


# this ensures we aren't using any aliases
alias ls=ls

OCTETS=$(
  ls -nl $LIBRARY | \
  awk '{print $5}'
) || exit 1

if [[ "$OCTETS" -gt 1500 ]]; then
  >&2 echo && echo "‚ö†Ô∏è ‚ö†Ô∏è ‚ö†Ô∏è snuggsi„ÉÑ is over weight: current size is $OCTETS, maximum allowable is 1500"

  exit 1
fi


echo "  ‚úÖ  snuggsi„ÉÑ weighs $OCTETS OCTETS"
echo


exit 0
