#!/usr/bin/env bash


COUNT="wc -l" # Output lines
TRIM=" tr -d" #Translate deletion
CODE=${1:-./dist/snuggsi.es} # Distribution
LINT="./node_modules/.bin/standard $DIST"
NUMBER_OF_WARNINGS=`$LINT | $COUNT | $TRIM " "`



echo
echo "✍ Performing Lint Check on 👉  $CODE"


echo
echo "⚠️  StandardJS Warnings 👉  $NUMBER_OF_WARNINGS"
