#!/usr/bin/env bash

ROOT=$(pwd)

# https://gist.github.com/branneman/8775568
# https://gist.github.com/branneman/8048520

# NODE_PATH on Heroku
# https://lostechies.com/derickbailey/2014/02/20/how-i-work-around-the-require-problem-in-nodejs/
NODE_PATH=$ROOT:$NODE_PATH

echo "Booting snuggsi server on Port $PORT"

node           \
  --require ./ \
-- bin/serve.es
