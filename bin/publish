#!/usr/bin/env bash

EXAMPLES=examples
DESTINATION=public
FILES=files=(sandbox.html index.html index.css)


echo
echo "🚮  Removing 👉  public/examples/"

rm -rf $EXAMPLES

echo
echo "📤  Publishing static assets..."
echo "  👇"


echo "  📁  examples/ 👉  $DESTINATION/examples/"

cp -fr ./examples     $DESTINATION



for file in ${files[@]}
do
  echo "  📃 $file 👉  $DESTINATION/$file"
  cp -f  $file $DESTINATION
done
