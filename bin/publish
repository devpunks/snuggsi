#!/usr/bin/env bash

EXAMPLES=examples
DESTINATION=public
ASSETS=(sandbox.html index.html index.css)


echo
echo "🚮  Removing 👉  $DESTINATION/$EXAMPLES"

rm -rf $DESTINATION/$EXAMPLES

echo
echo "📤  Publishing static assets ..."
echo "  To 👉  $DESTINATION"
echo "  👇"


echo "  📁  $EXAMPLES 👉  $DESTINATION/$EXAMPLES"

cp -fr $EXAMPLES $DESTINATION


for asset in ${ASSETS[@]}
do
  echo "  📃 $asset 👉  $DESTINATION/$asset"
  cp -f  $asset $DESTINATION
done
