#!/usr/bin/env bash

DESTINATION=public
EXAMPLES=./public/examples


echo
echo "🚮  Removing 👉  public/examples/"

rm -rf $EXAMPLES

echo
echo "📤  Publishing static assets..."
echo "  👇"


echo "  📁  examples/ 👉  public/examples/"

cp -fr ./examples     ./public


files=(sandbox.html index.html index.css)


for file in ${files[@]}
do
  echo "  📃 $file 👉  public/$file"
  cp -f  $file ./public
done
