#!/usr/bin/env bash

EXAMPLES=examples
DESTINATION=public
FILES=files=(sandbox.html index.html index.css)


echo
echo "ğŸš®  Removing ğŸ‘‰  $DESTINATION/$EXAMPLES"

rm -rf $DESTINATION/$EXAMPLES

echo
echo "ğŸ“¤  Publishing static assets ..."
echo "  To ğŸ‘‰  $DESTINATION"
echo "  ğŸ‘‡"


echo "  ğŸ“  $EXAMPLES ğŸ‘‰  $DESTINATION/$EXAMPLES"

