#!/usr/bin/env bash

declare -r  DESTINATION=public
declare -ar ASSETS=(favicon.ico sandbox.html index.html index.css)

echo "ðŸ“¤  Publishing static assets ..."
echo "  To ðŸ‘‰  $DESTINATION/"
echo "  ðŸ‘‡"

for asset in ${ASSETS[@]}
do
  echo "  ðŸ“ƒ  $asset ðŸ‘‰  $DESTINATION/$asset"
