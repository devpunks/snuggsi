#!/usr/bin/env bash

declare -r  DESTINATION=public
declare -ar ASSETS=(favicon.ico sandbox.html index.html index.css typography.css)

echo "ðŸ“¤  Publishing static assets â€¦"
echo "  To ðŸ‘‰  $DESTINATION/"
echo "  ðŸ‘‡"

for asset in ${ASSETS[@]}
do
  echo "  ðŸ“ƒ  $asset ðŸ‘‰  $DESTINATION/$asset"
  cp -f  $asset $DESTINATION
done

echo

echo "  ðŸ†• Publishing library to https://npmjs.org"
echo
npm publish --tag=dev
echo
npm view --tag=dev
