#!/usr/bin/env bash


echo
echo "🚮 Removing 👉  public/examples/"

rm -rf ./public/examples

echo
echo "📤 Publishing static assets..."
echo "  👇"


echo "  📁  examples/ 👉  public/examples/"

cp -fr ./examples     ./public

echo "  📃 sandbox.html 👉  public/sandbox.html"
cp -f  ./sandbox.html ./public

echo "  📃 index.html 👉  public/index.html"
cp -f  ./index.html   ./public

echo "  📃 index.css 👉  public/index.css"
cp -f  ./index.css    ./public

echo "  📃 snippets/browser-sync.es 👉  public/browser-sync.es"
cp -f  ./snippets/browser-sync.es ./public
