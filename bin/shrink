#!/usr/bin/env bash


SHRINK=node_modules/.bin/uglifyjs
declare extensions=("es" "js")


echo
echo "🍤  Shrinking..."
echo "  👇"
echo


for extension in "${EXTENSIONS[@]}"
do
  echo $extension
done


INPUT=dist/snuggsi.es
OUTPUT=dist/snuggsi.min.es

echo "    📃  $INPUT 👉  $OUTPUT"

$SHRINK                  \
  --compress             \
  --mangle safari10=true \
  --output $OUTPUT       \
$INPUT


INPUT=dist/snuggsi.js
OUTPUT=dist/snuggsi.min.js

echo "    📃  $INPUT 👉  $OUTPUT"

$SHRINK                  \
  --compress             \
  --mangle safari10=true \
  --output $OUTPUT       \
$INPUT
