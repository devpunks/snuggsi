#!/usr/bin/env bash


SHRINK=node_modules/.bin/uglifyjs
declare extensions=("es" "js")


echo
echo "ğŸ¤  Shrinking..."
echo "  ğŸ‘‡"
echo


for extension in ${extensions[@]}
do
  INPUT=dist/snuggsi.$extension
  OUTPUT=dist/snuggsi.min.$extension

  echo "    ğŸ“ƒ  $INPUT ğŸ‘‰  $OUTPUT"

  $SHRINK                  \
    --compress             \
    --mangle safari10=true \
    --output $OUTPUT       \
  $INPUT
done
