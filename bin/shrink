#!/usr/bin/env bash

echo
echo "ğŸ¤  Shrinking..."
echo "  ğŸ‘‡"


SHRINK=node_modules/.bin/uglifyjs
extensions=(es js)

for extension in ${extensions[@]}
do
  declare INPUT=dist/snuggsi.$extension
  declare OUTPUT=dist/snuggsi.min.$extension

  echo "    ğŸ“ƒ  $INPUT ğŸ‘‰  $OUTPUT"

  $SHRINK                  \
    --compress             \
    --mangle safari10=true \
    --output $OUTPUT       \
  $INPUT
done
