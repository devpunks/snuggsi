#!/usr/bin/env bash


SHRINK= ./node_modules/.bin/uglifyjs


echo
echo "🍤  Shrinking..."
echo "  👇"
echo


$SHRINK                          \
  --compress                     \
  --mangle safari10=true         \
  --output ./dist/snuggsi.min.es \
  -- ./dist/snuggsi.es


$SHRINK                          \
./node_modules/.bin/uglifyjs     \
  --compress                     \
  --mangle safari10=true         \
  --output ./dist/snuggsi.min.js \
  -- ./dist/snuggsi.js
