#!/bin/bash

export THRESHOLD=95       # Represented in Percentage
export INCLUDE="resource" # Included coverage files

echo "Coverage threshold set to ðŸ‘‰  $THRESHOLD"
echo "Including ðŸ‘‰  $INCLUDE"
echo "Excluding ðŸ‘‰  $EXCLUDE"
echo

  ./node_modules/.bin/nyc \
    --include=$INCLUDE    \
    --exclude=$EXCLUDE    \
    --extension=.es       \
    --reporter=text       \
    bin/test

