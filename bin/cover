#!/bin/bash

echo # NYC Test coverage
echo "⚠️  snuggsi ツ Coverage:"
export INCLUDE="resource" # Included coverage files
export EXCLUDE="**/node_modules/**" # Excluded coverage files

echo "➕ Including 👉  $INCLUDE"
echo "➖ Excluding 👉  $EXCLUDE"
echo


./node_modules/.bin/nyc \
  --include=$INCLUDE    \
  --exclude=$EXCLUDE    \
  --extension=.es       \
  --reporter=text       \
  bin/test


export THRESHOLD=95       # Represented in Percentage
echo
echo "snuggsi ツ 📊  Coverage Check"
echo "  Threshold 👉  $THRESHOLD %"
echo

./node_modules/.bin/nyc     \
  check-coverage            \
    --lines      $THRESHOLD \
    --function   $THRESHOLD \
    --statements $THRESHOLD \
  bin/test

export CODE=$?

rm -rf .nyc_output/ # Remove output directory

exit $CODE
