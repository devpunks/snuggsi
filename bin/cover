#!/bin/bash

echo # NYC Test coverage
echo "âš ï¸  snuggsi ãƒ„ Coverage:"
export INCLUDE="resource" # Included coverage files
export EXCLUDE="**/node_modules/**" # Excluded coverage files

echo "â• Including ğŸ‘‰  $INCLUDE"
echo "â– Excluding ğŸ‘‰  $EXCLUDE"
echo


./node_modules/.bin/nyc \
  --include=$INCLUDE    \
  --exclude=$EXCLUDE    \
  --extension=.es       \
  --reporter=text       \
  bin/test


export THRESHOLD=95       # Represented in Percentage
echo
echo "snuggsi ãƒ„ ğŸ“Š  Coverage Check"
echo "  Threshold ğŸ‘‰  $THRESHOLD %"
echo

./node_modules/.bin/nyc     \
  check-coverage            \
    --lines      $THRESHOLD \
    --function   $THRESHOLD \
    --statements $THRESHOLD \
  bin/test

export CODE=$?

rm -rf .nyc_output/ # Remove output directory

exit $CODE
