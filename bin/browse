# https://unix.stackexchange.com/questions/122845/using-a-b-for-variable-assignment-in-scripts

export PORT=${PORT:-80}
export BROWSER_PORT=$((PORT+1))


PORT=$PORT                               \
  bin/serve                              \
&                                        \
BROWSER_PORT=$BROWSER_PORT               \
  ./node_modules/.bin/browser-sync start \
  --config=./watch/index.es              \
&                                        \
bin/watch
