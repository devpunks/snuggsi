#!/usr/bin/env bash

# https://gist.github.com/branneman/8775568
# https://gist.github.com/branneman/8048520
# https://stackoverflow.com/questions/10265798/determine-project-root-from-a-running-node-js-application

export PORT=8181
export NODE_PATH=`pwd`
export ROOT=$NODE_PATH
export BIN="$NODE_PATH/node_modules/.bin"
export TEST="$BIN/tape"
export SPEC="$BIN/tap-spec"

export API="element"
export ENTRY="index.test"
export LIBRARIES=".,test,server,resource,middleware"
export TESTS=$ROOT/${1:-"{$LIBRARIES,$API}/$ENTRY"}


echo
echo "ðŸš¨  Testing, Testing, 1,2,3, ..."
echo
echo "  Entry ðŸ‘‰  $ENTRY"
echo "  Suite ðŸ‘‰  $TESTS"
echo

$TEST          \
  --require .  \
  -- $TESTS    \
  |  $SPEC
