#!/bin/bash

# Run tape

# https://stackoverflow.com/questions/10265798/determine-project-root-from-a-running-node-js-application
export ROOT=$(pwd)

export FILES="./server/index.test.es,./middleware/index.test.es"

# https://gist.github.com/branneman/8775568
# https://gist.github.com/branneman/8048520
export NODE_PATH=$ROOT

$ROOT/node_modules/.bin/tape \
  -r $ROOT/polyfills \
  -r $ROOT/test \
  './{server,middleware,elements}/index.test.es' \
| $ROOT/node_modules/.bin/tap-nyc
